

@model Entities.Entities.Produto

@using (Html.BeginForm("Edit", "Produto", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.CodProduto)

        <div class="form-group p-1">
            @Html.LabelFor(model => model.NomeProduto, htmlAttributes: new { @class = "control-label fw-bold text-secondary mb-2" }) 
            @Html.EditorFor(model => model.NomeProduto, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NomeProduto, "", new { @class = "text-danger" })
        </div>


        <div class="form-group p-2 ">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
}
<style>
    .control-label {
        font-size: 1.1rem; 
        color: #4a4a4a; 
        margin-bottom: 0.5rem; 
    }
</style>
